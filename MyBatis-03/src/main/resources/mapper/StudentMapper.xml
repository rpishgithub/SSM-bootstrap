    <!--    2.嵌套结果-->
    <select id="findStudentById" parameterType="Integer" resultMap="StudentResultWithIdCard">
        select s.*, card.code
        from student s,
             studentIdCard card
        where s.card_id = card.id
          and s.id = #{id}
    </select>
    <resultMap id="StudentResultWithIdCard" type="tech.rpish.po.Student">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="sex" column="sex"/>
        <association property="studentIdCard" javaType="tech.rpish.po.StudentIdCard">
            <id property="id" column="id"/>
            <id property="code" column="code"/>
        </association>
    </resultMap>

</mapper>